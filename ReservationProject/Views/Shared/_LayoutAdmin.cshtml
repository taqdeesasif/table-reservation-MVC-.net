                            <li>
                                <a href="@Url.Action("WeeklyReport","Reports")">Weekly Report</a>
                            </li>
                            <li>
                                <a href="@Url.Action("SaleReport","Reports")">Reservation Report</a>
                            </li>
                            <li>
                                <a href="@Url.Action("ReportWithoutFood","Reports")">Without Pre-Order</a>
