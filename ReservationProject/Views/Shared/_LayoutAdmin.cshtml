                    <h5>
                        Welcome <a style="color:#d9534f">
                            @User.Identity.Name

                        </a> , Love to see you back.
                    </h5>
                </div>
            }


            <div style="color: black;
padding: 3px 50px 5px 50px;
float: right;
font-size: 16px;"><h5> @System.DateTime.Now.ToLongDateString() @System.DateTime.Now.ToShortTimeString() &nbsp; <a href="@Url.Action("Logout","Home")" class="btn btn-danger square-btn-adjust">Logout</a> </h5></div>


