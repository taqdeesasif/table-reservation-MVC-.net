                        <a href="@Url.Action("IndexCustomer","Home")"><img src="@Url.Content(db.Resturants.Where(x=>x.IS_VALID == true).Select(x => x.RESTURANT_LOGO).First())" alt="HTML tutorial" style="width:230px;height:100px;"></a>

