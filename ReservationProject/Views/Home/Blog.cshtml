@model IEnumerable<ReservationProject.Models.Blog>


@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}







<h1 style="background-color:black; color:white">
    <br /><br /><br /><p style="text-align:center" class="breadcrumbs"><span class="mr-2"><a href="index.html">Home <i class="fa fa-chevron-right"></i></a></span> <span>Blog <i class="fa fa-chevron-right"></i></span></p>
</h1>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-2">
            <div class="col-md-7 text-center heading-section ftco-animate">
                <span class="subheading">Blogs</span>
                <h2 class="mb-4">Select Blog</h2>
            </div>
        </div>

        <div class="row">
            @foreach (var b in Model)
            {
                <div class="col-md-4 ftco-animate">
                    <div class="blog-entry">
                        <a href="blog-single.html" class="block-20" style="background-image: url('@Url.Content(b.BLOG_PICTURE)');">
                        </a>
                        <div class="text px-4 pt-3 pb-4">
                            <div class="meta">
                                <div><a href="#">@b.BLOG_DATE</a></div>
                                <div><a href="#">@b.Admin.ADMIN_NAME</a></div>
                            </div>
                            <h3 class="heading"><a href="#">@b.BLOG_TITLE</a></h3>
                            <p class="clearfix">
                                <a href="@Url.Action("BlogSingle","Home" , new { id = b.BLOG_ID})" class="float-left read btn btn-primary">Read more</a>

                            </p>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
</section>


<script type="text/javascript">
    window.onload = function () { window.scrollBy(0, 350); }
</script>
