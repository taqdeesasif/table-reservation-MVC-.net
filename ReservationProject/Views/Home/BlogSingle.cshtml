@model IEnumerable<ReservationProject.Models.Blog>


@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}



<h1 style="background-color:black; color:white">
    <br /><br /><br /><p style="text-align:center" class="breadcrumbs"><span class="mr-2"><a href="index.html">Home <i class="fa fa-chevron-right"></i></a></span> <span>Blog <i class="fa fa-chevron-right"></i></span> <span>Single-Blog <i class="fa fa-chevron-right"></i></span></p>
</h1>

<section class="ftco-section">
    <div class="container">
        @foreach (var l in Model)
        {
            <div class="row">
                <div class="col-lg-8 ftco-animate">
                    <h2 class="mb-3">@l.BLOG_TITLE</h2>
                    <p>@l.Admin.ADMIN_NAME</p>
                    <p>@l.BLOG_DATE</p>
                    <p>
                        <img src="@Url.Content(l.BLOG_PICTURE)" alt="" class="img-fluid">
                    </p>
                    <p>@l.BLOG_DESCRIPTION</p>



                </div> <!-- .col-md-8 -->


            </div>
        }
    </div>
</section>
