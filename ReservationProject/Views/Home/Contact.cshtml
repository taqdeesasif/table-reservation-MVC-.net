@using ReservationProject.Models
@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    Model5 db = new Model5();
}





<h1 style="background-color:black; color:white">
    <br /><br /><br /><p style="text-align:center" class="breadcrumbs"><span class="mr-2"><a href="index.html">Home <i class="fa fa-chevron-right"></i></a></span> <span>ContactUs <i class="fa fa-chevron-right"></i></span></p>
</h1>

<br />

<section class="ftco-section ftco-no-pt contact-section">

    <div class="container">
        <div class="row d-flex align-items-stretch no-gutters">

            <div class="col-md-6 p-5 order-md-first">
                @if (Session["Customer"] == null)
                {<p class=" font-weight-bold">
                        <br /> <br />
                        <br />
                        Please Login...
                        <br />To Communicate with Us
                        <br />
                        <a href="@Url.Action("Login","Customers")" class=" btn fa fa-user" style="color:blue">  Customer Login</a>

                    </p>

                }
                @if (Session["Customer"] != null)
                {
                    using (Html.BeginForm("Cont", "Home"))
                    {<h2 class="h4 mb-5 font-weight-bold">
                            Contact Us

                        </h2>
                        <form action="#">
                            <div class="form-group">
                                <input type="email" name="CONTACTUS_EMAIL" class="form-control" placeholder="Your Email">
                            </div>

                            <div class="form-group">
                                <textarea name="CONTACTUS_MESSAGE" cols="30" rows="7" class="form-control" placeholder="Message"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Send Message" class="btn btn-primary py-3 px-5">
                            </div>
                        </form>
                    }
                }
            </div>



        </div>
    </div>



    <section class="ftco-section contact-section bg-light">
        <div class="container">
            <div class="row d-flex contact-info">
                <div class="col-md-12">
                    <h2 class="h4 font-weight-bold">Contact Information</h2>
                </div>
                <div class="w-100"></div>
                <div class="col-md-3 d-flex">
                    <div class="dbox">
                        <p><span>Address:</span> @db.Resturants.Where(x => x.IS_VALID == true).Select(x => x.RESTURANT_ADDRESS).First()</p>
                    </div>
                </div>
                <div class="col-md-3 d-flex">
                    <div class="dbox">
                        <p><span>Phone:</span> <a href="#">@db.Resturants.Where(x => x.IS_VALID == true).Select(x => x.RESTURANT_CONTACT).First()</a></p>
                    </div>
                </div>
                <div class="col-md-3 d-flex">
                    <div class="dbox">
                        <p><span>Email:</span> <a href="#">@db.Resturants.Where(x => x.IS_VALID == true).Select(x => x.RESTURANT_EMAIL).First()</a></p>
                    </div>
                </div>
                <div class="col-md-3 d-flex">
                    <div class="dbox">
                        <p><span>Website</span> <a href="#">FoodO'clock.com</a></p>
                    </div>
                </div>
            </div>
        </div>
    </section>


</section>


<script type="text/javascript">
    window.onload = function () { window.scrollBy(0, 300); }
</script>

