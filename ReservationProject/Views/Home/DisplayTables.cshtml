@model ReservationProject.Models.AvailabilityModel


@{
    string h = null;
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}











<div style="background-color:black; text-align:center">
    <br /><br /><br /> <br /><br />



    <hr style="height:1px;border-width:0;color:gray;background-color:#e52b34">

    <p style="color:red; font-size:25px"> Un-Available Slots</p>




    @foreach (var avai in Model.Ab)
    {

        <p style="color:white"> @DateTime.Parse(avai.UNAVAILABLE_DATE.ToString()).ToLongDateString()&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;    @avai.UNAVAILABLE_TIME</p>

    }
    <hr style="height:1px;border-width:0;color:gray;background-color:#e52b34">
    <br />
</div>




<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-2">
            <div class="col-md-7 text-center heading-section ftco-animate">
                <span class="subheading">Select</span>
                <h2 class="mb-4">Table</h2>
            </div>
        </div>



        <div class="row">
            @foreach (var tabcat in Model.Tb)
            {
                if (tabcat.VALIDATE == true)
                {<div class="col-md-6 col-lg-3 ftco-animate">

                        <div class="staff">
                            <div class="img" style="background-image: url('@Url.Content(tabcat.TABCATEGORY_PICTURE)');"></div>
                            <div class="text px-4 pt-2">
                                <h3>@tabcat.TABCATEGORY_NAME</h3>
                                <span class="position mb-2" style="color:#b0b0b0; height:50px">@tabcat.TABCATEGORY_DESCRIPTION </span>
                                <a href="@Url.Action("AddTable", "Home" , new { id = tabcat.TABCATEGORY_ID})" class="btn btn-danger">SELECT</a>
                                <div class="faded">
                                    <p>Service Charges : @tabcat.TABCATEGORY_PRICE</p>


                                </div>


                            </div>
                        </div>
                    </div>

                }

            }
        </div>
    </div>
</section>

<script type="text/javascript">
    window.onload = function () { window.scrollBy(0, 180); }
</script>